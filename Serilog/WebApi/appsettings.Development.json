{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "Using": [ "Serilog","Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.EntityFrameworkCore": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "restrictedToMinimumLevel": "Verbose"
              }
            }
          ]
        }
      },
      {
        "Name": "File", 
        "Args": { 
          "path": "Logs/Thislog.txt",
          "rollingInterval": "Hour",
          "fileSizeLimitBytes": 10000000,
          "rollOnFileSizeLimit": true,
          "retainedFileCountLimit": 2,
          "retainedFileTimeLimit": 1
        } 
      },
      { 
        "Name": "File", 
        "Args": { 
          "path": "Logs/Compactlog.json",
          "rollingInterval": "Hour",
          "fileSizeLimitBytes": 1000000,
          "rollOnFileSizeLimit": true,
          "retainedFileCountLimit": 2,
          "retainedFileTimeLimit": 1,
          "_formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
          "restrictedToMinimumLevel": "Information"
        }
      },
      {
        "Name": "EventLog",
        "Args": {
          "Source": "This Application",
          "manageEventSource": true,
          "restrictedToMinimumLevel": "Warning"
        }
      },
      // Splunk HEC integration -- Never was successful with this.
      {
        "Name": "EventCollector",
        "Args": {
            "splunkHost": "http://10.0.2.4:8088",
            "eventCollectorToken": "9dc6e3ad-d253-41fc-accb-5986275b40c1"
        }
      },

      // Creating a sublogger - basically a complete additional Serilog environment.
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "Logs/logger.log",
                  "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u5}] {Message:lj}{NewLine}{Exception}"
                }
              }
            ],
            "Filter": [
              {
                "Name": "ByExcluding",
                "Args": {
                  "expression": "StartsWith(SourceContext, 'Microsoft.')"
                }
              }
            ]
          }
        }
      }
    ],
    "AuditTo": [
      { "Name": "File", 
        "Args": { 
          "path": "Logs/Auditlog.json",
          "rollingInterval": "Hour",
          "fileSizeLimitBytes": 1000000,
          "rollOnFileSizeLimit": true,
          "retainedFileCountLimit": 2,
          "retainedFileTimeLimit": 1,
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
          "_formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
          "restrictedToMinimumLevel": "Error"
        } 
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId", "WithExeptionDetails", "WithEnvironmentUserName"],
    "Properties": {"Environment": "LocalDev", "Application":"This App", "Programmer": "Marshall"}
  }
}
