{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Exceptions", "Serilog","Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.EntityFrameworkCore": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "restrictedToMinimumLevel": "Verbose"
              }
            }
          ]
        }
      },
      {
        "Name": "File", 
        "Args": { 
          "path": "Logs/Thislog.txt",
          "rollingInterval": "Hour",
          "fileSizeLimitBytes": 1000000,
          "rollOnFileSizeLimit": true,
          "retainedFileCountLimit": 2,
          "retainedFileTimeLimit": 1
        } 
      },
      { 
        "Name": "File", 
        "Args": { 
          "path": "Logs/Compactlog.json",
          "rollingInterval": "Hour",
          "fileSizeLimitBytes": 1000000,
          "rollOnFileSizeLimit": true,
          "retainedFileCountLimit": 2,
          "retainedFileTimeLimit": 1,
          "_formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
          "restrictedToMinimumLevel": "Information"
        }
      },
      {
        "Name": "EventLog",
        "Args": {
          "Source": "This Application",
          "manageEventSource": true,
          "restrictedToMinimumLevel": "Warning"
        }
      }
    ],
    "AuditTo": [
      { "Name": "File", 
        "Args": { 
          "path": "Logs/Auditlog.json",
          "rollingInterval": "Hour",
          "fileSizeLimitBytes": 1000000,
          "rollOnFileSizeLimit": true,
          "retainedFileCountLimit": 2,
          "retainedFileTimeLimit": 1,
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
          "_formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
          "restrictedToMinimumLevel": "Error"
        } 
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId", "WithExeptionDetails", "WithEnvironmentUserName"],
    "Properties": {"Environment": "LocalDev", "Application":"This App", "Programmer": "Marshall"}
  }
}
